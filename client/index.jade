doctype html
html(lang="en")
  head
    title Dominion
  body
    #status
      div(v-if='!socket')
        input(v-model='name')
        input(type='password' v-model='password')
      h4
        span(v-if='socket') Connected as {{ name }}
        button(
          v-on='click: connect'
          v-disabled='connecting'
        ) {{ !!socket ? 'Disconnect' : 'Connect' }}

      #games(v-if='socket')
        div(v-if='!myGame')
          button(v-on='click:newGame') New Game
          ul
            li(v-repeat='games')
              span {{ creator }} Game
              span  - {{ players.length }} / {{ maxPlayers }}
              span  - {{ status }}
              button(v-on='click: join(creator)') Join

    script(src='main.js')
